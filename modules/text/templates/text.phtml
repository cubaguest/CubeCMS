$model = new Text_Model_Detail();
$text = $model->getText(Category::getSelectedCategory()->getId());
if($text != false) {
   if($text->{Text_Model_Detail::COLUMN_LABEL} != '') {
      $this->addPageTitle($text->{Text_Model_Detail::COLUMN_LABEL});
      $this->addPageHeadline($text->{Text_Model_Detail::COLUMN_LABEL});
   }
   $text = $text->{Text_Model_Detail::COLUMN_TEXT};
} else {
   $text = $this->_("Text nebyl definován, vytvoříte jej v administraci");
}

?>
<div>
   <?=$text?>
</div>
<? $this->addJsPlugin(new JsPlugin_LightBox())?>
<script type="text/javascript">
   $(document).ready(function() { $('a[rel*=lightbox]').lightBox(); });
</script>
