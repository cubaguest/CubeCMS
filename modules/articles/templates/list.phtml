         }
         echo implode(', ', $printArray);
         ?>
      </div>
      <?php }?>
      <div class="showed"><?php echo $this->tr('Zobrazeno')?>:&nbsp;<?php echo $article->{Articles_Model::COLUMN_SHOWED}?>&times;</div>
