   <script type="text/javascript">
      google.load("visualization", "1", {packages:["corechart"]});
      function createChart($chart, idb) {
         $.ajax({
            url: "<?=$this->link()->route('clicksList')?>",
            type: "GET",
            data: {idb : idb},
            success : function(data){
               var dataArr = [ ['<?=$this->tr('Datum')?>', '<?=$this->tr('Kliknutí')?>'] ];
               
               $.each(data.days, function(day, clicks){
                  dataArr.push([day, clicks]);
               });
               // initialize chart
               var data = google.visualization.arrayToDataTable(dataArr);

               var options = {
                  height : 150,
                  title: '<?=$this->tr('Přehled kliknutí na banner')?>',
                  hAxis : { minValue : 0, format : "#x" }
               };
//               document.getElementById('chart_div')
               var chart = new google.visualization.LineChart($chart[0] );
               chart.draw(data, options);
            }
         });
         $chart.addClass('loaded');
      }
