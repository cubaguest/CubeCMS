   <script>
      $(function() {
		$( "#images-sorter ul" ).sortable({
			placeholder: "ui-state-highlight"
		});
		$( "#images-sorter ul" ).disableSelection();

      // delete image
      $('.button-delete-image').click(function(e){
         e.preventDefault();
         if(confirm('<?=$this->tr('Smazat obrázek?')?>')){
            // get id
            var id = $(this).parent('li').find('input.sort_image_id_class').val();
            var $item = $(this).parent('li');
            $item.fadeOut(500, function(){
               // ajax request
               $.ajax({
                  type: "POST",
                  url: "<?=$this->link()->route('deletephoto')?>",
                  data: {id : id},
                  success: function(msg){
                     $item.remove();
                  }
               });
            });
         }
      });
   });
   </script>
