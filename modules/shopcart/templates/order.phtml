      function toggleAddress($this){
         var items = $this.parents('table').find( 'tr:not(:first)' );
         if($this.is(':checked')){
            items.show();
         } else {
            items.hide();
         }
      }
      function togglePassword($this){
         if($this.is(':checked')){
            $this.parents('tr').next('tr').show();
         } else {
            $this.parents('tr').next('tr').hide();
         }
      }
