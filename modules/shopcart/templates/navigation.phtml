<?php
$stepAllowBack = $this->stepAllowBack == null ? false : $this->stepAllowBack;
$step = $this->step == null ? 1 : $this->step;
$steps = array(
    1 => $this->tr('Krok 1. Košík'),
    2 => $this->tr('Krok 2. Kontakt a potvrzení'),
    3 => $this->tr('Krok 3. Dokončení'),
);
$stepsLinks = array(
    1 => $this->link()->route(),
    2 => $this->link()->route('order'),
    3 => $this->link()->route('orderComplete'),
);
?>
<div>
   <div class="row shop-step-list">
      <?php
      foreach ($steps as $stepNum => $s) {
         $class = ($stepNum == $step ? 'current' : ( $stepNum < $step ? 'prev' : 'next' ) );
         ?>
         <div class="step-<?php echo $class ?> col-sm-4">
            <?php if ($class == 'current' || $class == 'prev') { ?>
               <a href="<?php echo $stepsLinks[$stepNum] ?>">
            <?php } ?>
            <?php echo $s ?>
            <?php if ($class == 'current' || $class == 'prev') { ?>
               </a>
            <?php } ?>
         </div>
      <?php } ?>
   </div>
</div>
