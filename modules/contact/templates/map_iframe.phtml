<?php 
if($this->urlParams == null){
   return;
}
$url = $this->urlParams;
if(strpos($url, 'http') === false){
   $url = 'https://maps.google.com/maps?q='.$url;
}
$url = new Url($url);
$url->param('output', 'embed');
$url->param('ie', 'UTF8');
?>
<h2 id="contact-map-headline"><?php echo $this->tr('Mapa jak se k nám dostanete')?></h2>
<div class="contact-map">
<iframe width="500" height="400" frameborder="0" scrolling="no"
        marginheight="0" marginwidth="0" src="<?php echo $url?>"></iframe><br />
      <small><a href="<?php echo $url?>"><?php ps($this->tr('Zvětšit mapu'))?></a></small>
</div>
