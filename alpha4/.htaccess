RewriteEngine On
RewriteCond %{REQUEST_URI} !\.[[:alnum:]]+$
RewriteRule ^(.+[^/])$ /vve/$1/ [R=301]

#RewriteRule ^([^/]+)/([^/]+)/([0-9]+)/([^/]+)/$ /vve/index.php?lang=$1&category=$2&article=$3&action=$4 [QSA]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]{3,})/([^/]{9,})/$ /vve/index.php?category=$1&article=$2 [QSA]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]{3,})/([^/]{1,8})/$ /vve/index.php?category=$1&action=$2 [QSA]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]{3,})/([^/]+)/([^/]+)/$ /vve/index.php?category=$1&article=$2&action=$3 [QSA]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]{3,})/$ /vve/index.php?category=$1 [QSA]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.{2})/([^/]+)/([^/]{9,})/$ /vve/index.php?lang=$1&category=$2&article=$3 [QSA]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.{2})/([^/]+)/([^/]{1,8})/$ /vve/index.php?lang=$1&category=$2&action=$3 [QSA]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]+)/([^/]+)/([^/]+)/([^/]+)/$ /vve/index.php?lang=$1&category=$2&article=$3&action=$4 [QSA]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.{2})/([^/]+)/$ /vve/index.php?lang=$1&category=$2 [L,QSA]
