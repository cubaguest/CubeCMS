<!-- Sekce v menu  -->
<div class="chromestyle" id="chromemenu">
   <ul>
      <? foreach ($this->v("SECTIONS_ARRAY") as $sec_key => $section) {?>
      <li>
         <? if($section["submenu"]){?>
         <a href="#" rel="dropmenu<?=$sec_key?>" title="<?=$section["slabel"]?>"><?=$section["slabel"]?></a>
         <? } else { ?>
         <a href="<?=$section["url"]?>" title="<?=$section["calt"]?>"><?=$section["clabel"]?></a>
         <? } ?>
      </li>
      <?}?>
   </ul>
</div>
<!-- Kategorie v podmenu -->
<? foreach ($this->v("CATEGORY_ARRAY") as $cat_key => $category) {?>
<div id="dropmenu<?=$cat_key?>" class="dropmenudiv">
   <? foreach ($category as $menuItem){?>
   <a href="<?=$menuItem["url"]?>" title="<?=$menuItem["calt"]?>"><?=$menuItem["clabel"]?></a>
   <? }?>
</div>
<? } ?>

<script type="text/javascript">
   cssdropdown.startchrome("chromemenu")
</script> 
