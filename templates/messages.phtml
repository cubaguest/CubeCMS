<? // chyby enginu
if(!$this->v("CORE_ERRORS_EMPTY")){ ?>
<div class="errorMessage text">
   <img src="./images/icons/coreerror.png" alt="core error icon" />
   <? foreach ($this->v("CORE_ERRORS") as $error) {?>
      <?=$error["name"]?>: (<i><?=$error["code"]?></i>) <b><?=$error["message"]?></b>
      <?=_("soubor")?> <?=$error["file"]?>, <?=_("řádek")?> <?=$error["line"]?>
