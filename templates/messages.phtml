if(!empty ($this->messages)){ ?>
<p class="message text" id="messages">
   <img src="./images/icons/accept.png" alt="message icon" />
   <? foreach ($this->messages as $message) {
      echo $message . "<br />";
   }?>
   <script type="text/javascript">
      <!--
      setTimeout('document.getElementById("messages").style.display = "none"', 2000);
      -->
   </script>
</p>
<? }?>

<? // chyby enginu
if(!$this->coreErrorsEmpty){ ?>
<div class="errorMessage text">
   <img src="./images/icons/coreerror.png" alt="core error icon" />
   <? foreach ($this->coreErrors as $error) {?>
      <?=$error["name"]?>: (<i><?=$error["code"]?></i>) <b><?=$error["message"]?></b>
      <?=_("soubor")?>: <?=$error["file"]?>, <?=_("řádek")?>: <?=$error["line"]?>
      <? if($this->debugMode){
         foreach ($error["trace"] as $err) {?>
         <p class="errTrMargin">
            <?=$err["class"].$err["type"].$err["function"]."&nbsp;&nbsp;";
            echo _("soubor").": <i>".$err["file"] ."</i>&nbsp;&nbsp;&nbsp;"._("řádek").": ".$err["line"];?>
         </p>
         <?}
      }?>
      <?}?>
</div>
<? }?>

<? // chyby modulu
if(!empty ($this->moduleErrors)){ ?>
<div class="errorMessage text">
   <img src="./images/icons/error.png" alt="error icon" />
   <? foreach ($this->moduleErrors as $error) {
      if($this->debugMode){
         echo _('Modul')." ". $error ."<br />";
      } else{
         echo $error ."<br />";
      }
     }?>
</div>
<? }?>
