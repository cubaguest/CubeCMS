         foreach ($error["trace"] as $err) {?>
         <p class="errTrMargin">
            <?=$err["class"].$err["type"].$err["function"];
            echo _("soubor").": ".$err["file"] ._("řádek").": ".$err["line"];?>
         </p>
         <?}
      }?>
      <?}?>
</div>
<? }?>

<? // chyby modulu
if(!$this->v("MODULE_ERRORS_EMPTY")){ ?>
