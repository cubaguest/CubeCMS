<?php 
if(!defined('VVE_TOOLBOX_ICON_SIZE')) define('VVE_TOOLBOX_ICON_SIZE', 16);
?>
<div class="toolbox">
   <?php 
   foreach ($this->getTools() as $tool) {?>
   <form method="post" action="<?php echo $tool['link'];?>"
      <?php if($tool['message'] != null) {?>onsubmit="return (confirm('<?php echo $tool["message"]?>'));"<?php }?>>
               <?php 
               if($tool['nameHidden'] != null) {?>
      <input type="hidden" value="<?php echo $tool['valueHidden'];?>" name="<?php echo $tool['nameHidden'];?>" />
         <?php }?>
      <!--<input type="image" src="images/toolbox/<?php echo $tool['icon'];?>" name="<?php echo $tool['name'];?>"
             value="<?php echo $tool['value'];?>" title="<?php echo $tool['title'];?>" />-->
      <p>
         <?php 
         if(is_int($tool['icon'])) {?>
      <input type="submit" name="<?php echo $tool['name'];?>" value="<?php echo $tool['value'];?>"
             title="<?php echo $tool['title'];?>" style="background-image: url('images/toolbox/icons.png'); background-position: 0 <?php echo $tool['icon']*VVE_TOOLBOX_ICON_SIZE-VVE_TOOLBOX_ICON_SIZE;?>px" />
                <?php } else {?>
      <input type="submit" name="<?php echo $tool['name'];?>" value="<?php echo $tool['value'];?>"
             title="<?php echo $tool['title'];?>" style="background-image: url('images/icons/<?php echo $tool['icon'];?>')" />
         <?php }?>
      </p>
   </form>
   <?php }?>
</div>

<script type="text/javascript">
   $("div.toolbox").css({opacity: 0.3});
   $("div.toolbox").hover(
   function(){$(this).fadeTo(100, 1);},
   function(){$(this).fadeTo(300, 0.5);}
);

</script>
