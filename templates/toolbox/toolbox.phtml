<?
$this->addJsPlugin(new JsPlugin_JQuery());
$this->addFile('css://engine:admin/admin.less');// need for buttons style
$rTime = rand(1, time());
?>
<div class="toolbox">
   <a class="toolbox-button"
      href="#" title="<?$this->tr('Otevřít nástroje')?>">
      <span class="icon icon-<?=$this->toolboxIcon?>"></span>
   </a>
   <div class="toolbox-tools">
   <? foreach ($this->getTools() as $name => $tool) {
      $class = get_class($tool);
      if($class == "Template_Toolbox2_Tool_LangLoader" AND !Locales::isMultilang()) continue;
      
      $toolClasses = array();
      $tool->getImportant() ? $toolClasses[] = 'important' : '';
      $class == "Template_Toolbox2_Tool_LangLoader" ? $toolClasses[] = 'multitool' : '';
      ?>
      <div class="toolbox-tool <?=implode(' ', $toolClasses)?>">
      <?
         $formOnSubmit = null;
         if($tool->getConfirmMessage() != null){
            $formOnSubmit .= 'return confirm(\''.$tool->getConfirmMessage().'\');';
         }
         $image = null;
         if($tool->getIcon() != null){
           $image = '<img src="'.$this->iconsDir . $tool->getIcon().'" alt="icon '.$tool->getIcon().'" />';
         }

         switch ($class) {
            case 'Template_Toolbox2_Tool_PostRedirect':
               ?>
               <form action="<?=$tool->getAction() ?>" method="post" onsubmit="<?=$formOnSubmit?>" name="<?=$name?>">
                  <div>
                     <button type="submit" name="<?=$tool->getName() ?>_button"
                             class="toolbox-tool-button" title="<?=$tool->getTitle() ?>"
                             ><span class="icon icon-<?=$tool->getIcon()?>"></span><?=$tool->getLabel() ?></button>
                  <?
                  $addVal = $tool->getSubmitValues();
                  foreach ($addVal as $key => $value) {
                     echo "<input type=\"hidden\" name=\"$key\" value=\"" . (string) $value . "\" />";
                  }?>
                  </div>
               </form>
               <?
               break;
            case 'Template_Toolbox2_Tool_Redirect':
               // tohle má být odkaz
               $addVal = $tool->getSubmitValues();
               $link = $tool->getAction();
               foreach ($addVal as $key => $value) {
                  $link->param($key, $value);
               }
               ?><a href="<?=$link ?>" title="<?=$tool->getTitle() ?>"
                    onclick="<?=$formOnSubmit?>" 
                    class="toolbox-tool-button toolbox-button-<?=$name?>"
                    ><span class="icon icon-<?=$tool->getIcon()?>"></span><?=htmlspecialchars($tool->getLabel())?></a>
                <?
               break;
            case 'Template_Toolbox2_Tool_Form':
               ?>
               <form action="<?=$tool->getForm()->getAction();?>" 
                     method="<?=$tool->getForm()->getSendMethod();?>" name="<?=$name?>" onsubmit="<?=$formOnSubmit?>">
                  <div><?
                  foreach ($tool->getForm() as $element) {
                     if($element instanceof Form_Element_Submit OR $element instanceof Form_Element_SubmitImage){
                        ?><button class="toolbox-tool-button" type="submit" name="<?=$element->getName()?>"
                             title="<?=$element->getLabel() ?>"
                        ><span class="icon icon-<?=$tool->getIcon()?>"></span><?=$element->getLabel()?></button>
                        <?
                     } else if($element instanceof Form_Element_Hidden) {
                        ?><input type="hidden" name="<?=$element->getName();?>" value="<?=$element->getValues() ?>" /><?
                     }
                  }
                  ?><input type="hidden" name="<?=$tool->getForm()->getFormChecker()->getName();?>" value="<?=$tool->getForm()->getFormChecker()->getValues() ?>" /><?
               ?></div></form><?
               break;
            case 'Template_Toolbox2_Tool_Select':
               ?>
               <form action="<?=$tool->getForm()->getAction();?>" 
                     method="<?=$tool->getForm()->getSendMethod();?>" name="<?=$name?>" onsubmit="<?=$formOnSubmit?>">
                  <div><?
                  foreach ($tool->getForm() as $element) {
                     if($element instanceof Form_Element_Select){
                        ?>
                        <span class="icon icon-<?=$tool->getIcon()?>"></span><?=$element->getLabel()?>
                        <?
                        $element->setAttrib('onchange', 'this.form.submit');
                        echo $element->control();
                     } else if($element instanceof Form_Element_Hidden) {
                        ?><input type="hidden" name="<?=$element->getName();?>" value="<?=$element->getValues() ?>" /><?
                     }
                  }
                  ?><input type="hidden" name="<?=$tool->getForm()->getFormChecker()->getName();?>" value="<?=$tool->getForm()->getFormChecker()->getValues() ?>" /><?
               ?></div></form><?
               break;
            case 'Template_Toolbox2_Tool_LangLoader':
               ?>
               <div><span class="icon icon-<?=$tool->getIcon()?>"></span>
               <?
               echo $this->tr('Ukaž');
               $link = new Url_Link();
                  foreach($tool->getLangs() as $key => $lang){?>
                     <a class="toolbox-changelang-button" href="<?if(Locales::getLang() != $key){ echo $link->param('l', $key); } else {echo $link->param('l');}?>" 
                        title="<?=$lang?>"
                        ><img src="images/langs/small/<?=$key?>.png" /></a>
                  <?}?>
               </div>
               <?
               break;
            case 'Template_Toolbox2_Tool_Button':
               ?>
               <button class="toolbox-button toolbox-button-<?ps($name)?>" title="<?ps($tool->getTitle())?>"
                       onclick="<?=$formOnSubmit?>"><span class="icon icon-<?=$tool->getIcon()?>"></span><?=$tool->getLabel()?></button>
               <?
               break;
            case 'Template_Toolbox2':
               error_log('Sub level toolboxu není implementován');
            default:
               echo $this->tr("nepodporovaný nástroj");
               break;
         }
      ?>
      </div>
   <? } ?>
</div>
</div>
